<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back3"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/PlacaD"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="81dp"
        android:background="@drawable/background_1"
        android:gravity="center"
        android:text="Placa"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NumeroD"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="81dp"
        android:background="@drawable/background_1"
        android:gravity="center"
        android:text="Numero"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlacaD" />

    <TextView
        android:id="@+id/HoraD"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="81dp"
        android:background="@drawable/background_1"
        android:gravity="center"
        android:text="Hora"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumeroD" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/rounded_button"
        android:onClick="pagarUsuario"
        android:text="Pagar Auto"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HoraD" />
</androidx.constraintlayout.widget.ConstraintLayout>